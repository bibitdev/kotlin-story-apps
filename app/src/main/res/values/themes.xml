<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StoryApps" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#0069A0</item>
        <item name="colorSecondary">#0069A0</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="android:statusBarColor">#0069A0</item>
        <item name="android:windowBackground">#F5F5F5</item>
    </style>

    <!-- Theme without ActionBar -->
    <style name="Theme.StoryApps.NoActionBar" parent="Base.Theme.StoryApps">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.StoryApps.SplashScreen" parent="Theme.StoryApps.NoActionBar">
        <item name="android:windowBackground">@drawable/background_color</item>
    </style>

    <!-- Theme for general usage -->
    <style name="Theme.StoryApps" parent="Base.Theme.StoryApps" />
</resources>
